    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Botón de regreso"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_tracklim"
            android:contentDescription="Logo de Tracklim"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/circuit_name_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani_bold"
                android:textSize="32sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Autódromo Hermanos Rodríguez" />

            <ImageView
                android:id="@+id/track_map_image"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@id/circuit_name_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/autodromo_hermanos_rodriguez" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />

            <TextView
                android:id="@+id/label_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ubicación:"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toBottomOf="@id/track_map_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"/>

            <TextView
                android:id="@+id/value_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toTopOf="@id/label_location"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Ciudad de México, México" />

            <TextView
                android:id="@+id/label_length"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Longitud:"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toBottomOf="@id/label_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"/>

            <TextView
                android:id="@+id/value_length"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toTopOf="@id/label_length"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="4,304 km" />

            <TextView
                android:id="@+id/label_turns"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Curvas:"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toBottomOf="@id/label_length"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"/>

            <TextView
                android:id="@+id/value_turns"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toTopOf="@id/label_turns"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="17" />

            <TextView
                android:id="@+id/label_lap_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Vuelta récord:"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toBottomOf="@id/label_turns"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"/>

            <TextView
                android:id="@+id/value_lap_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toTopOf="@id/label_lap_record"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="1:17.774" />

            <TextView
                android:id="@+id/label_capacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Capacidad:"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toBottomOf="@id/label_lap_record"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"/>

            <TextView
                android:id="@+id/value_capacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toTopOf="@id/label_capacity"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="110,000" />

            <TextView
                android:id="@+id/label_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Historia:"
                android:fontFamily="@font/roboto_slab_regular"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/value_capacity"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/value_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_slab_regular"
                app:layout_constraintTop_toBottomOf="@id/label_history"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Fue construido en 1959..." />

            <Button
                android:id="@+id/view_winners_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ver Historial de Ganadores"
                android:backgroundTint="@color/winners_button_color"
                app:layout_constraintTop_toBottomOf="@id/value_history"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>